#!/usr/bin/env ruby

begin
  require 'cant_fire'
  CantFire.check_config!
  CantFire.start!
rescue CantFire::ConfigError => e
  $stderr.puts e.message
rescue Object
  if Interrupt === $!
    puts
    puts 'Exiting... '
    exit
  else
    puts "ERROR !!!!!!!!!!!"
    puts $!
    sleep 2
    retry
  end
end

